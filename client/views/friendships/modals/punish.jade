#punishModal.reveal-modal.small(data-reveal='')
  h2
    i.fa.fa-minus &nbsp;
      | Take Away Points
  hr
  form(name='punishForm')
    fieldset
      legend &nbsp;
        img.img-circle.img-thumbnail.img-thumbnail-avatar-sm(ng-src='{{friend.gravatar}}', alt='{{friend.username}}')
      label Why are you taking away brownie points from {{friend.firstName}}?
        textarea#why(name='body', ng-model='transaction.body', placeholder='You didn\'t help me move!', autofocus, required)
      label Points
        input#points(type='number', name='points', ng-model='transaction.points', max='(-1)', required)
      a.button.alert.radius.tiny(ng-click='punish(transaction)')
        i.fa.fa-bolt.fa-lg &nbsp; Punish
    a.close-reveal-modal &#215;
