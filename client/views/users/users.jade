.section-header.nine.columns.centered
  h1 {{mode | uppercase}}

.panel
  .row
    .small-12.columns
      form
        .row
          .small-6.columns
            label(for='username') Username
            input#username(type='text', name='username', ng-model='user.username', autofocus)
          .small-6.columns
        .row(ng-show='mode === "register"')
          .small-6.columns
            label(for='email') Email
            input#email(type='email', name='email', ng-model='user.email')
          .small-6.columns
        .row
          .small-6.columns
            label(for='password') Password
            input#password(type='password', name='password', ng-model='user.password')
          .small-6.columns
        //- .row(ng-show='mode === "register"')
        //-   .small-6.columns
        //-     label(for='confirm') Confirm Password
        //-     input#confirm(type='password', name='confirm', ng-model='user.confirm')
        //-   .small-6.columns
        .row
          .small-6.columns
            button.radius(ng-click='submit()') Submit
          .small-6.columns
