.sticky#nav
  nav.top-bar(data-topbar, role='navigation', ng-controller='NavCtrl')
    ul.title-area
      li.name
        h1
          a(ui-sref='home') BrowniePoints
      li.toggle-topbar.menu-icon
        a(href="/#/")
          span
    section.top-bar-section(ng-cloak)
      ul.right(ng-show='!rootuser.username')
        li: a(ui-sref='home') Home
        li: a(ui-sref='register') Register
        li: a(ui-sref='login') Login
      ul.right(ng-show='rootuser.username')
        li: a(ui-sref='dashboard')
          i.fa.fa-dashboard
            | &nbsp; Dashboard
        li: a(ui-sref='users_list')
          i.fa.fa-search
            | &nbsp; Find
        //- li: a(ui-sref='friendships.list')
        //-   i.fa.fa-group
        //-     | &nbsp; Friends
        li.divider
        li: a#avatarlink(ng-click='logout()'): img#avatarimg(ng-src='{{rootuser.avatar || rootuser.gravatar}}')
